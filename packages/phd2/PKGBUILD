# Maintainer: Mattia Procopio (astro.matto) <matto.astro at gmail dot com>
pkgname=phd2
pkgver=2.6.11dev4
pkgrel=1
pkgdesc="OpenPHDGuiding"
arch=(x86_64 aarch64)
url="https://openphdguiding.org/"
license=('LGPL')
depends=('libindi' 'libnova' 'curl' 'wxwidgets-gtk3' 'wxwidgets-common' 'libtiff5')
makedepends=(cmake)
source=("https://github.com/OpenPHDGuiding/phd2/archive/refs/tags/v$pkgver.tar.gz")
sha256sums=('4a2bda59a280c0e2a8850c0626209ecf7047e508e33a75a9223b6092e9dc3244')

prepare() {
	mkdir -p build
}

build() {
	cd build
	cmake ../phd2-$pkgver
	make -j4
}

package() {
	cd build
	make DESTDIR="$pkgdir" install
}
