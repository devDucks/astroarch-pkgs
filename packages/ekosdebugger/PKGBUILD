# Maintainer: Mattia Procopio (astro.matto) <matto.astro at gmail dot com>
pkgname=ekosdebugger
pkgver=1.0.0
pkgrel=1
pkgdesc="Ekos & INDI Debugger Tool"
arch=(aarch64)
url="https://github.com/knro/ekosdebugger"
license=('GPLv2')
depends=('gdb')
makedepends=(cmake)
source=("https://github.com/devDucks/ekosdebugger/archive/refs/tags/v${pkgver}.tar.gz")
sha256sums=('SKIP')

prepare() {
  mkdir -p build
}


build() {
  cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=release ../ekosdebugger-${pkgver}
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install
}
