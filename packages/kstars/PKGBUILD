# Maintainer: Mattia Procopio (astro.matto) <matto.astro at gmail dot com>
pkgname=kstars
pkgver=3.7.8
pkgrel=3
pkgdesc="Kstars planetary software and ekos"
arch=(x86_64 aarch64)
url="https://edu.kde.org/kstars/"
license=('APACHE2' 'BSD3' 'GPL' 'LGPL' 'LGPLv2' 'LGPLv3' 'MIT')
depends=('breeze-icons' 'hicolor-icon-theme' 'knewstuff' 'knotifyconfig' 'kplotting' \
         'libindi>=2.0.8' 'libraw' 'libxisf' 'qt6-datavis3d' 'qt5-quickcontrols' 'qt6-websockets' 'qtkeychain-qt6' \
	 'stellarsolver>=2.0' 'xplanet' 'eigen' 'kdoctools' 'opencv')
makedepends=(cmake extra-cmake-modules)
source=("https://github.com/KDE/kstars/archive/refs/heads/stable-$pkgver.zip")
sha256sums=('b363123d64dec37059cf68f09edef28b373123c336b60a9c8ce1d13752a1f22e')

build() {
  cmake -B build -S $pkgname-stable-$pkgver \
	-DCMAKE_INSTALL_PREFIX=/usr \
        -DBUILD_TESTING=OFF \
        -DCMAKE_C_FLAGS="$CFLAGS -ffat-lto-objects" \
        -DCMAKE_CXX_FLAGS="$CXXFLAGS -ffat-lto-objects"
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
